<!doctype html>
<html lang="en" class="h-full">
  <%- include('../partials/head', { title, description }) %>
  <body class="h-full bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100">
    <a
      href="#content"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 rounded-lg bg-white px-3 py-2 text-sm font-semibold text-slate-900 shadow-soft ring-1 ring-slate-200 dark:bg-slate-900 dark:text-slate-100 dark:ring-slate-800"
    >
      Skip to content
    </a>

    <div x-data="{ mobileOpen: false }" x-init="$store.theme.init()" class="min-h-full">
      <%- include('../partials/nav', { activePage }) %>

      <main id="content" class="mx-auto max-w-6xl px-4 py-10 sm:px-6">
        <%- body %>
      </main>

      <%- include('../partials/footer') %>
    </div>
  </body>
</html>


